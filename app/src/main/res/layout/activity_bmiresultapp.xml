<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:padding="30dp">
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnExit"
            android:text="Exit"
            android:layout_marginBottom="40dp"
            android:layout_gravity="right"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lblUrBmi"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lblBmiResult"
            android:layout_gravity="center"
            android:textSize="30sp"
            android:textColor="#900C3F"
            android:layout_marginBottom="30dp"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lblBmiResultCategory"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp"
            android:textSize="20sp"
            android:textColor="#ff5733"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnChkAgain"
            android:text="Check Again"
            android:layout_marginBottom="40dp"
            android:layout_gravity="center"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:id="@+id/txtInfo1"
            android:textColor="#8B008B"
            android:text="Nikhil Wadhwa
            M:8053954834"


    />




</LinearLayout>